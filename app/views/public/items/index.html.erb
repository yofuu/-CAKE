<h2>商品一覧</h2>(全<% @items %> 件)

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>価格</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
        <td><%= link_to item_path(item.id) do %>
            <%= image_tag item.image %>
            <% end %>
        </td>
      <tr>
        <td><%= link_to item_path(item.id) do %>
        <%= item.name %>
        <% end %>
        </td>
        <td><%= item.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</table>