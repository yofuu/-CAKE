<div class = "container">
<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
<table>
<tbody>
  <tr>
    <td>
     <div class="field">
       <%= f.label :'(性)' %><br />
       <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
     </div>
    </td>

    <td>
     <div class="field">
       <%= f.label :'(名)' %><br />
       <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
     </div>
    </td>
  </tr>

  <tr>
    <td>
     <div class="field">
      <%= f.label :'(セイ)' %><br />
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
     </div>
    </td>

    <td>
     <div class="field">
      <%= f.label :'(メイ)' %><br />
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
     </div>
    </td>
  </tr>

  <tr>
    <td>
     <div class="field">
      <%= f.label :'メールアドレス' %><br />
      <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
     </div>
    </td>
  </tr>

  <tr>
    <td>
     <div class="field">
      <%= f.label :'郵便番号(ハイフンなし)' %><br />
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
     </div>
    </td>
  </tr>

  <tr>
    <td>
     <div class="field">
      <%= f.label :'住所' %><br />
      <%= f.text_area :address, autofocus: true, autocomplete: "address" %>
     </div>
    </td>
  </tr>

  <tr>
    <td>
     <div class="field">
      <%= f.label :'電話番号' %><br />
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
     </div>
    </td>
  </tr>

  <tr>
    <td>
     <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
     </div>
    </td>
  </tr>

  <tr>
    <td>
     <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
     </div>
    </td>
  </tr>

  </div>
</tbody>
</table>
<div class="actions">
    <%= f.submit "新規登録" %>
    <h4>既に登録済みの方</h4>
    <%= link_to "こちら", new_customer_session_path %>からログインしてください。

<% end %>
</div>

<%#= render "public/shared/links" %>
