<div class = "container">
<h4>注文履歴詳細</h4>
<div class="row">
<div class="col-lg-4">
<h5>注文情報</h5>

<table>
  <tr>
    <td>注文日</td>
    <td><%= @order.created_at %></td>
  </tr>

  <tr>
    <td>配送先</td>
    <td><%= @order.shipping_addrress %></td>
  </tr>

  <tr>
    <td>支払方法</td>
    <td><%= @order.payment_method_i18n %></td>
  </tr>

  <tr>
    <td>ステータス</td>
    <td><%= Order.order_statuses_i18n[@order.order_status] %></td>
  </tr>
</table>
</div>

<div class="col-lg-4">
<h5>請求情報</h5>

<table>
  <tr>
    <td>商品合計</td>
    <td><%= @total %></td>
  </tr>

  <tr>
    <td>配送料</td>
    <td><%= @order.postage %></td>
  </tr>

  <tr>
    <td>ご請求額</td>
    <td><%= @order.billing_amount %></td>
  </tr>
</table>
</div>
</div>

<h5>注文内容</h5>

  <table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>

  <tbody>
    <% @order.order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.item.with_tax_price %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.item.with_tax_price * order_detail.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>