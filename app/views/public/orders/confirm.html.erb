<h4>注文確認確認</h4>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= image_tag order.item.get_image %></td>
        <td><%= order.item.name %></td>
        <td><%= order.item.with_tax_price %></td>
        <td><%= order.billing_amount %></td>
        <td><%= order.subtotal %></td>
      </tr>
    <% end %>

    <div>送料<%= @order.postage %></div>
    <div>商品合計<% @total +=  order.subtotal %></div>
    <div>請求金額<%= @order.billing_amount %></div>
  </tbody>
</table>