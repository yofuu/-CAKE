<div class = "container">
<h2>商品新規登録</h2>

<table>
 <tbody>
 <%= form_with model: @item, url:admin_items_path, method: :post do |f| %>

 <tr>
  <td>商品画像</td>
  <td><%= f.file_field :image %></td>
 </tr>

 <tr>
  <td>商品名</td>
  <td><%= f.text_field :name %></td>
 </tr>

 <tr>
  <td>商品説明</td>
  <td><%= f.text_area :introduction %></td>
 </tr>
 <!--<h4>ジャンル</h4>-->
 <!--</%= f.select :gener_id %>-->

 <tr>
  <td>税抜価格</td>
  <td><%= f.text_field :price %> 円</td>
 </tr>

 <tr>
  <td>販売ステータス</td>
  <td><%= f.radio_button :is_active, true %>販売中
      <%= f.radio_button :is_active, false %>販売停止中
  </td>
 </tr>
 </tbody>
</table>
 <%= f.submit '新規登録' %>
<% end %>
</div>