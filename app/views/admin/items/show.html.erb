<div class = "container">
<h2>商品詳細</h2>
<div class="row">
<div class="col-lg-3">
 <%= image_tag @item.get_image %>
</div>

<div class="col-lg-9">
<table>
<thead>
  <tr>
  <th>商品名</th>
  <th>商品説明</th>
  <th>税込価格(税抜価格)</th>
  <th>販売ステータス<th>
  </tr>
</thead>
<tbody>
  <tr>
   <th><%= @item.name %></th>


   <th><%= @item.introduction %></th>

<!--<h4>ジャンル</h4>-->
<!--<p></%= @item.gener_id %></p>-->


   <th><%= @item.with_tax_price %>(<%= @item.price %>)</th>


   <th><% if @item.is_active==true %>
        販売中
      <% else %>
        販売停止中
      <% end %>
   </th>
  </tr>
</tbody>
</table>


<%= link_to "編集する", edit_admin_item_path(@item.id) %>
</div>
</div>
</div>
