<div class = "container">
<h2>商品編集</h2>


<%= form_with model: @item, url:admin_item_path(@item.id), method: :patch do |f| %>
<table>
<tbody>
 <tr>
　<td>商品画像</td>
  <td><%= f.file_field :image %></td>
 </tr>
 <tr>
  <td>商品名</td>
  <td><%= f.text_field :name %></td>
 </tr>
 <tr>
  <td>商品説明</td>
  <td><%= f.text_area :introduction %></td>
 </tr>

 <!--<h4>ジャンル</h4>-->
 <!--</%= f.select :gener_id %>-->
 <tr>
  <td>税抜価格</td>
  <td><%= f.text_field :price %> 円</td>
 </tr>
 <tr>
  <td>販売ステータス</td>
  <td><%= f.radio_button :is_active, true %>販売中
      <%= f.radio_button :is_active, false %>販売停止中
  </td>
 </tr>
</tbody>
</table>

 <%= f.submit '変更を保存する' %>
<% end %>
</div>