<h4>商品一覧</h4>

<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
        <td><%= item.id %></td>
      <tr>
        <td><%= link_to admin_item_path(item.id) do %>
        <%= item.name %>
        <% end %>
        </td>
        <td><%= item.price %></td>
        <td><%= item.genre_id %></td>
        <td><%= item.is_active %></td>
      </tr>
    <% end %>
  </tbody>
</table>