<h4>注文履歴一覧</h4>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to admin_customer_path(item.id) do %>
          <%= order.created_at %>
          <% end %>
        </td>
        <td><%= customer.name %></td>
        <td><%= order.amount %></td>
        <td><%= order.order_status %></td>
        <td><% if order.order_status==true %>
            有効
            <% else %>
            退会
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @orders %>