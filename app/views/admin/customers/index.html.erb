<h4>会員一覧</h4>

<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
        <td><%= customer.id %></td>
      <tr>
        <td><%= link_to admin_customer_path(item.id) do %>
        <%= customer.name %>
        <% end %>
        </td>
        <td><%= customer.email %></td>
        <td><% if customer.is_deleted==true %>
            有効
            <% else %>
            退会
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>